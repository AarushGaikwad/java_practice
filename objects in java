package classesandObjects;

	
 class Person {
	
	String name;
	int age;
	
	public Person(String name, int age) {
		System.out.println("I am constructor"); //constructor don't any return type
		this.name= name;
		this.age= age;
	}
	
	public void displayinfo() {   //method to display persons details 
		System.out.println("name: "+this.name);
		System.out.println("age: "+this.age);
		
	}
 }

 public class Construct {
	public static void main(String args[]) {
	
		Person p1 = new Person("Aarush", 22);  //creating an object of a class
		p1.displayinfo();	
	}
 }
 

